generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Endpoint {
  id          String          @id @default(cuid())
  name        String
  url         String
  intervalSec Int             @default(60)
  isActive    Boolean         @default(true)
  createdAt   DateTime        @default(now())
  checks      EndpointCheck[] // back-relation
}

model EndpointCheck {
  id         String   @id @default(cuid())
  endpoint   Endpoint @relation(fields: [endpointId], references: [id])
  endpointId String
  status     String
  responseMs Int?
  createdAt  DateTime @default(now())
}





